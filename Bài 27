#include <iostream>
using namespace std;
int main(){
     float diem_toan[3], tong = 0 ,tb;
     cout << " nhap diem: " << endl;
     for(int i = 0; i < 3; i++){
         cout << " diem_toan[" << i << "] = ";
         cin >> diem_toan[i];
     }
     for(int i = 0; i < 3;i++){
           tong += diem_toan[i];
     }
     tb = tong / 3;
     cout << "trung binh: " << tb << endl;
     return 0;
}
